{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "configMigration": true,
  "rangeStrategy": "pin",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchDatasources": ["dart-version"],
      "rangeStrategy": "replace",
      "schedule": ["every 2 months on the first day of the month"]
    },
    {
      "groupName": "dependency Flutter",
      "matchPackageNames": ["flutter"]
    },
    {
      "groupName": "dependency freezed",
      "matchPackageNames": ["/^freezed/"]
    },
    {
      "groupName": "dependency riverpod",
      "matchPackageNames": ["riverpod"]
    }
  ]
}
